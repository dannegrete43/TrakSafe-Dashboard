                <!-- Generator Controls -->
                <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
                    <div class="space-y-4">
                        <div>
                            <label for="asset-select" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Select an Existing Asset</label>
                            <select id="asset-select" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                                <option value="">Loading assets...</option>
                            </select>
                        </div>
                        <div class="text-center text-sm text-gray-500 dark:text-gray-400">OR</div>
                        <div>
                            <label for="custom-id-input" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Enter a Custom Asset ID</label>
                            <input type="text" id="custom-id-input" placeholder="e.g., TRK-NEW-001" class="mt-1 block w-full border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <button id="generate-qr-button" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Generate QR Code</button>
                    </div>
                </div>
                <!-- QR Code Display -->
                <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow flex flex-col items-center justify-center">
                    <div id="qrcode-container" class="w-64 h-64 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                        <span class="text-gray-500 dark:text-gray-400">QR Code will appear here</span>
                    </div>
                     <button id="download-button" class="hidden mt-6 bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg flex items-center space-x-2">
                        <i class="fa-solid fa-download"></i>
                        <span>Download PNG</span>
