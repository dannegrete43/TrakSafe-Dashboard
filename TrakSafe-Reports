                 <div id="loading-spinner" class="hidden text-center py-8">
                    <i class="fas fa-spinner fa-spin fa-2x text-gray-500"></i>
                </div>
                <div id="report-table-container" class="overflow-x-auto">
                    <!-- Table will be injected here -->
                </div>
                 <div id="no-results" class="text-center py-16">
                    <i class="fas fa-search fa-4x text-gray-400"></i>
                    <h2 class="mt-4 text-2xl font-semibold">Generate a Report</h2>
                    <p class="mt-2 text-gray-500">Select a date range and click "Generate Report" to view inspection data.</p>
